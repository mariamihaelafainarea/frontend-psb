<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/logo"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/parolanoua_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parola noua"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="172dp" />


    <EditText
        android:id="@+id/parolanoua_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/parolanoua_label"
        android:layout_marginTop="8dp"
        android:hint="Introdu aici parola"
        android:textColorHint="@color/gray"
        android:textColor="@color/black"
        android:textSize="25dp" />


    <TextView
        android:id="@+id/confirmaparola_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parolanoua_edittext"
        android:layout_marginStart="16dp"
        android:text="Confirma paroal"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textSize="25dp" />


    <EditText
        android:id="@+id/confirmaparola_edittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_below="@+id/confirmaparola_label"
        android:layout_marginTop="8dp"
        android:hint="Confirma parola aici"
        android:textColorHint="@color/gray"
        android:textColor="@color/black"
        android:textSize="25dp" />


    <Button
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:text="Schimba parola"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/confirmaparola_edittext"

        />

</RelativeLayout>