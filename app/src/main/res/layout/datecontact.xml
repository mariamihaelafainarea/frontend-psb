<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header_datecontact"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="40dp"
        android:foregroundGravity="center"
        android:gravity="center"

        android:text="Date de Contact"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/cerc_listareplati"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_nume_datecontact"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Nume:"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_nume_datecontact"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/nume_label"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_nume_datecontact" />

    <TextView
        android:id="@+id/label_prenume_datecontact"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_below="@+id/nume_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Prenume:"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_nume_datecontact" />

    <EditText
        android:id="@+id/edit_prenume_datecontact"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/prenume_label"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_prenume_datecontact" />

    <TextView
        android:id="@+id/label_email_datecontact"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_below="@+id/prenume_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:foregroundGravity="center"
        android:gravity="center"

        android:text="Adresa de email:"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_prenume_datecontact" />

    <EditText
        android:id="@+id/edit_email_datecontact"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/email_label"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_email_datecontact" />

    <TextView
        android:id="@+id/label_telefon_datecontact"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_below="@+id/email_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Telefon:"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_email_datecontact" />

    <EditText
        android:id="@+id/edit_telefon_datecontact"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/passowrd_label"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_telefon_datecontact" />

    <Button
        android:id="@+id/exit_datecontact"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@+id/password_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/blue"
        android:gravity="center"
        android:text="Inapoi"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_telefon_datecontact" />
</androidx.constraintlayout.widget.ConstraintLayout>