<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/header_locuriconsum"
        android:layout_width="200dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="40dp"
        android:foregroundGravity="center"
        android:gravity="center"

        android:text="Locuri de Consum"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cerc_administrarelocuriconsum"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="192dp"
        android:src="@drawable/cerc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/administrare_locuri_label_edit"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center"
        android:gravity="center"
        android:textSize="17sp"
        android:text="Administrare Locuri de Consum"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/cerc_administrarelocuriconsum"
        app:layout_constraintEnd_toEndOf="@+id/cerc_administrarelocuriconsum"
        app:layout_constraintHorizontal_bias="0.369"
        app:layout_constraintStart_toStartOf="@+id/cerc_administrarelocuriconsum"
        app:layout_constraintTop_toTopOf="@+id/cerc_administrarelocuriconsum" />


    <ImageView
        android:id="@+id/cerc_adaugareloc"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/cerc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/istoricIndex"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Adaugare Loc de Consum"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/cerc_adaugareloc"
        app:layout_constraintEnd_toEndOf="@+id/cerc_adaugareloc"
        app:layout_constraintStart_toStartOf="@+id/cerc_adaugareloc"
        app:layout_constraintTop_toTopOf="@+id/cerc_adaugareloc"

        />


    <Button
        android:id="@+id/exit_locuriconsum"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/forgotpass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/blue"
        android:gravity="center"
        android:text="Inapoi"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/istoricIndex" />


</androidx.constraintlayout.widget.ConstraintLayout>
