<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/logo"
        android:orientation="vertical">


        <TextView
            android:id="@+id/header_istoricindex"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="78dp"
            android:layout_marginEnd="40dp"
            android:foregroundGravity="center"
            android:gravity="center"

            android:text="Istoric Index"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/label_locconsum_istoricindex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="115dp"
            android:text="Loc Consum"
            android:textColor="@color/black"
            android:textSize="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <Spinner
            android:id="@+id/spinner_locconsum_istoricindex"
            android:layout_width="350dp"
            android:layout_height="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:outlineAmbientShadowColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_locconsum_istoricindex" />


        <Button
            android:id="@+id/button_istoricindex"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/blue"
            android:text="Afiseaza Istoric"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_locconsum_istoricindex" />

        <Button
            android:id="@+id/exit_istoricindex"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginLeft="285dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp"
            android:backgroundTint="@color/blue"
            android:text="Inapoi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner_locconsum_istoricindex" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/istoricindex_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_istoricindex" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>