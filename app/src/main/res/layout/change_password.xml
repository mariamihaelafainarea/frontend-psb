<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/icon1_changepassword"
        android:layout_width="12dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="3dp"
        android:src="@drawable/lacat"
        app:layout_constraintEnd_toStartOf="@+id/edit_parolanoua_changepassword"
        app:layout_constraintTop_toTopOf="@+id/edit_parolanoua_changepassword" />

    <TextView
        android:id="@+id/label_parolanoua_changepassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="115dp"
        android:foregroundGravity="center"
        android:text="Parola noua:"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_parolanoua_changepassword"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/label_parolanoua_changepassword"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        android:inputType="textPassword"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_parolanoua_changepassword" />

    <TextView
        android:id="@+id/label_confirmaparola_changepassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_parolanoua_changepassword"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:text="Confirma parola:"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_parolanoua_changepassword" />

    <EditText
        android:id="@+id/edit_confirmaparola_changepassword"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@+id/label_confirmaparola_changepassword"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:inputType="textPassword"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_confirmaparola_changepassword" />

    <ImageView
        android:id="@+id/icon2_changepassword"
        android:layout_width="12dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="3dp"
        android:src="@drawable/lacat"
        app:layout_constraintEnd_toStartOf="@+id/edit_confirmaparola_changepassword"
        app:layout_constraintTop_toTopOf="@+id/edit_confirmaparola_changepassword" />

    <Button
        android:id="@+id/modifica_changepassword"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/edit_confirmaparola_changepassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/blue"
        android:gravity="center"
        android:text="Modifica"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_confirmaparola_changepassword" />

    <Button
        android:id="@+id/exit_changepassword"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/modifica_changepassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/blue"
        android:gravity="center"
        android:text="Inapoi"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/modifica_changepassword" />


</androidx.constraintlayout.widget.ConstraintLayout>

